{
    // 禁用 Microsoft C/C++ 插件的 IntelliSense，使用 clangd
    "C_Cpp.intelliSenseEngine": "disabled",

    // clangd 配置
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}",
        "--background-index",
        "--clang-tidy",
        "--completion-style=detailed",
        "--header-insertion=iwyu",
        "--pch-storage=memory"
    ],

    // 确保 clangd 使用 compile_commands.json
    "clangd.path": "clangd"
}
